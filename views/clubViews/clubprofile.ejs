	    	<br>
	    	<table>
	    		<tr>
		    		<div class="container">
			    		<ul>
			    			<% events.forEach(function(event){ %>
			    				<div class="row">
			    				
			    					<div style="width: 100%; margin: 10px; margin-bottom: 40px;">
							 	   		<div class="">
								 	   		<h2 id="<%= event._id %>" style="float: left; color:#333; text-align: center;">
												<%= event.name %>
												<br>
												<br>
												<p style="font-size: 10px;  float: left; text-align: left;">
